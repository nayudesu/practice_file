<div>
      <%= render 'books/error', book: @user %>
      <%= render 'profile', user: @user %>
      <%= render 'books/newbook', book: @book %>
</div>

<h1>Users</h1>
<table>
<thead>
  <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @user.books.each do |book| %>
 <tr>
   <td><%=link_to user_path do %>
        <%= image_tag @user.get_profile_image(80,80) %>
        <% end %>
    </td>
    <td><%= link_to book.title, book_path(book.id) %></td>
   <td><%= book.body %></td>
 </tr>
</tbody>
<% end %>
</table>