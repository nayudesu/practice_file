<% if user_signed_in? %>

<%= form_with url: search_path, method: :get do |f| %>
  <%= f.text_field :word %> <!--検索内容を、wordとしてアクションに送信-->
  <%= f.select :range, options_for_select([['User'],['Book']]) %>
  <!--select=複数の検索が選べるようにする/options_for_select([['--'], ['--']])で記述-->
  <!--:rangeで選択したモノを送信している-->
  <%= f.select :search, options_for_select([["完全一致","perfect_match"],["前方一致","foward_match"],["後方一致","backward_match"],["部分一致","partial_match"]]) %>
  <!--:searchで選択したモノを送信している-->
  <%= f.submit "検索"%>
<% end %>

<% end %>
