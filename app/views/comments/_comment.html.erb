<table>
  <tbody>
  <% book.comments.each do |comment| %>
        <tr>
          <td>
          <%= link_to user_path(comment.user) do %> <!--userのshowページへ-->
            <%= image_tag comment.user.get_profile_image, size: "100x100" %><br>
            <%= comment.user.name %>
          <% end %>
          </td>
          <td><%= comment.user.name %></td>
          <td><%= comment.comment %></td>
          <td>
          <% if comment.user == current_user %>
          <%= link_to 'Destroy', book_comments_path(comment.book,comment), method: :delete, remote: true %>
          <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>   
  </table>