<div>
  <%= render 'error', book: @book %>
  <%= render 'users/profile', user: @user %>
  <%= render 'newbook', book: @book %>

</div>
<h1>Books</h1>
<table>
<thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
</thead>
<tbody>
<% @books.each do |book| %>
 <tr>
   <td>
       <%= link_to book_path(book.user.id) do %> <!--投稿したuserの画面に飛ぶ-->
       <%= image_tag book.user.get_profile_image(80,80) %>
       <% end %>
   </td>
   <td><%= link_to book.title, book_path(book.id) %></td>
   <td><%= book.body %></td>
 </tr>
</tbody>
<% end %>
</table>