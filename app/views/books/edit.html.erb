<h2>Editing Book</h2>
      <%= render 'error', book: @book %>

        <%= form_with model:@book do |f| %>
          <div class="field">
            <%= f.label :Title %><br />
            <%= f.text_field :title %>
          </div>
          <div class="field">
            <%= f.label :Opinion %><br />
            <%= f.text_area :body %>
          </div>
          <%= f.submit'Update Book' %></br>
          
          <%=link_to"Show",book_path(@book.id) %> |

          <a href="/books">Back</a>
        <% end %>